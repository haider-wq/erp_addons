<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="integration_metafield_mapping_tree_view" model="ir.ui.view">
            <field name="name">integration.metafield.mapping.list</field>
            <field name="model">integration.metafield.mapping</field>
            <field name="arch" type="xml">
                <list>
                    <field name="integration_id" invisible="1"/> <!-- Required because it is used in the fields domains in the model -->
                    <field name="type" invisible="1"/> <!-- Required because it is used in the fields domains in the model -->
                    <field name="metafield_id"/>
                    <field name="metafield_key"/>
                    <field name="metafield_type"/>
                    <field name="odoo_field_id"/>
                </list>
            </field>
        </record>

        <record id="integration_metafield_mapping_action" model="ir.actions.act_window">
            <field name="name">Metafield Mappings</field>
            <field name="res_model">integration.metafield.mapping</field>
            <field name="view_mode">list</field>
        </record>

    </data>

</odoo>
