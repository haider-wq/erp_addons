<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form_external_integration" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.external.integration</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="E-Commerce Integrations" string="E-Commerce Integrations" name="integration" groups="integration.group_integration_manager">
                    <div id="external_integration">
                        <h2>Security Settings</h2>
                        <div class="row mt16 o_settings_container" name="integration_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="api_key_setting">
                                <div class="o_setting_right_pane">
                                    <label for="integration_api_key" class="mb-3" />
                                    <field name="integration_api_key" widget="CopyClipboardChar" readonly="1" style="width:100%"/>
                                    <button name="generate_integration_api_key" string="Regenerate API Key" type="object" class="btn btn-outline-primary mt-2"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="system_configuration">
                        <h2>System State</h2>
                        <div class="row mt16 o_settings_container" name="system_configuration_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div class="text-muted mb-3">
                                        Click this button to check the system configuration and ensure that all necessary settings are properly installed and configured.
                                    </div>
                                    <button name="validate_configuration" string="Validate Configuration" type="object" class="btn btn-outline-primary"/>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div class="text-muted mb-3">
                                        Click here to open the Getting Started Wizard and access video tutorials and helpful instructions for configuring your connector.
                                    </div>
                                    <button name="open_getting_started_guide" string="Open Getting Started Guide" type="object" class="btn btn-outline-primary"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </app>
            </xpath>
        </field>
    </record>

    <record id="integration_res_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form_external_integration"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'integration'}</field>
    </record>

</odoo>
