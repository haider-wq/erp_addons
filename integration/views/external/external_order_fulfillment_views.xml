<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="external_order_fulfillment_view_form" model="ir.ui.view">
            <field name="name">external.order.fulfillment.view.form</field>
            <field name="model">external.order.fulfillment</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="id"/>
                        <field name="erp_order_id"/>
                        <field name="internal_status"/>
                        <field name="external_str_id"/>
                        <field name="external_location_id"/>
                        <field name="external_status"/>
                        <field name="internal_info"/>
                        <field name="tracking_company"/>
                        <field name="tracking_number"/>
                    </group>
                    <group>
                        <field name="line_ids" readonly="1">
                            <list>
                                <field name="external_str_id"/>
                                <field name="code"/>
                                <field name="external_reference"/>
                                <field name="quantity"/>
                                <field name="fulfillable_quantity"/>
                            </list>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <record id="external_order_fulfillment_view_tree" model="ir.ui.view">
            <field name="name">external.order.fulfillment.view.list</field>
            <field name="model">external.order.fulfillment</field>
            <field name="arch" type="xml">
                <list create="0"
                      decoration-muted="internal_status=='done'"
                      decoration-warning="internal_status=='skipped'"
                      decoration-danger="internal_status=='failed'">
                    <field name="id" groups="base.group_no_one"/>
                    <field name="erp_order_id"/>
                    <field name="internal_status" invisible="1"/> <!-- Required because it is used in list view decoration -->
                    <field name="external_str_id" optional="hide"/>
                    <field name="external_location_id"/>
                    <field name="external_status"/>
                    <field name="tracking_company"/>
                    <field name="tracking_number"/>
                    <field name="line_ids" widget="many2many_tags" optional="show"/>
                </list>
            </field>
        </record>

        <record id="external_order_fulfillment_view_search" model="ir.ui.view">
            <field name="name">external.order.fulfillment.view.search</field>
            <field name="model">external.order.fulfillment</field>
            <field name="arch" type="xml">
                <search>
                    <field name="erp_order_id"/>
                    <field name="external_str_id"/>
                    <group expand="0" string="Group By">
                        <filter string="ERP Order" name="group_by_erp_order_id" context="{'group_by': 'erp_order_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="external_order_fulfillment_tree_action" model="ir.actions.act_window">
            <field name="name">Order Fulfillments</field>
            <field name="res_model">external.order.fulfillment</field>
            <field name="view_mode">list,form</field>
            <field name="groups_id" eval="[(4, ref('base.group_no_one'))]"/>
        </record>

    </data>
</odoo>
