<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="external_order_source_name_view_tree" model="ir.ui.view">
            <field name="name">external.order.source.name.view.list</field>
            <field name="model">external.order.source.name</field>
            <field name="arch" type="xml">
                <list editable="bottom" create="0">
                    <field name="id" groups="base.group_no_one"/>
                    <field name="integration_id"/>
                    <field name="name"/>
                    <field name="external_name"/>
                </list>
            </field>
        </record>

        <record id="external_order_source_name_view_search" model="ir.ui.view">
            <field name="name">external.order.source.name.view.search</field>
            <field name="model">external.order.source.name</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="external_name"/>
                    <group expand="0" string="Group By">
                        <filter string="Integration" name="group_by_integration_id" context="{'group_by': 'integration_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="external_order_source_name_action" model="ir.actions.act_window">
            <field name="name">External Order Source Name</field>
            <field name="res_model">external.order.source.name</field>
            <field name="view_mode">list</field>
            <field name="groups_id" eval="[(4, ref('base.group_no_one'))]"/>
        </record>

    </data>
</odoo>
