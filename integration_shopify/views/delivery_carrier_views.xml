<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_delivery_carrier_shopify_form" model="ir.ui.view">
        <field name="name">delivery.carrier.shopify.form.view</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/." position="inside">
                <page name="integration" string="E-Commerce Integration">
                    <group name="integration_shopify" string="Shopify">
                        <field name="shopify_code"/>
                        <div class="alert alert-info mb-1" role="alert" colspan="2" style="width: 50%;">
                            <a href="https://ecosystem.ventor.tech/faq/e-commerce-connectors/shopify/why-i-get-odoo-exceptions-usererror-the-shopify-code-field-is-not-defined-for-the-dhl-carrier-error-while-sending-tracking-number-to-shopify/" target="_blank">
                                Where can I find Shopify code for my carrier?
                            </a>
                        </div>

                        <field name="integration_send_tracking_url" widget="boolean_toggle"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
