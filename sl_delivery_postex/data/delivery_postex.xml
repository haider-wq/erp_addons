<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="postex_packaging_envelope" model="stock.package.type">
            <field name="name">Postex Envelope</field>
            <field name="postex_mail_type">envelope</field>
            <field name="shipper_package_code">envelope</field>
            <field name="package_carrier_type">postex</field>
            <field name="packaging_length">200</field>
            <field name="width">20</field>
            <field name="height">150</field>
        </record>
        <record id="postex_packaging_pallet" model="stock.package.type">
            <field name="name">Postex Pallet</field>
            <field name="shipper_package_code">pallet</field>
            <field name="postex_mail_type">pallet</field>
            <field name="package_carrier_type">postex</field>
            <field name="packaging_length">1000</field>
            <field name="width">1200</field>
            <field name="height">1600</field>
        </record>

        <!-- postex Delivery Carrier Data -->
        <record id="product_product_delivery_postex" model="product.product">
            <field name="name">merchant.postex.pk</field>
            <field name="default_code">postex</field>
            <field name="type">service</field>
            <field name="categ_id" ref="delivery.product_category_deliveries"/>
            <field name="sale_ok" eval="False"/>
            <field name="purchase_ok" eval="False"/>
            <field name="list_price">0.0</field>
            <field name="taxes_id" eval='[(5,)]'/>  <!-- no taxes -->
        </record>
        <record id="delivery_carrier_postex" model="delivery.carrier">
            <field name="name">merchant.postex.pk</field>
            <field name="product_id" ref="sl_delivery_postex.product_product_delivery_postex"/>
            <field name="delivery_type">postex</field>
        </record>
    </data>
</odoo>

